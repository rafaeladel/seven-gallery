<%= form_tag update_photos_info_gallery_photos_path(@gallery) do %>
    <% @photos.each do |photo| %>
        <div id="photo_<%= photo.id %>" class="photo_form row">
          <div class="col-md-3">
            <%= image_tag photo.image %>
          </div>
          <div class="col-md-6">
            <%= fields_for "photos[]", photo do |f| %>
              <% photo.errors.full_messages.each do |msg| %>
                  <p><%= msg %></p>
              <% end %>
              <%= render "fields", f: f %>
            <% end %>
          </div>
        </div>
    <% end %>
    <%= submit_tag "Save" %>
<% end %>